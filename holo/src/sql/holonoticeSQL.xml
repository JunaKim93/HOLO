<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="holonotice">

	<insert id="insertNotice" parameterType="HolonoticeDTO"> 
		insert into noticeboard values(noticeboard_seq.nextval,
									   #{category_a},
									   #{id},
									   #{subject},
									   #{content},
									   0,
									   0,
									   0,
									   sysdate
									   )
	</insert>
									   
	<update id="countViews" parameterType="int">
		update noticeboard set viewcount=viewcount+1  where articlenum=#{value}
	</update>
					   
	
	
	
	<update id="updateNotice" parameterType="holouserDTO">
		update holouser <set>
						<if test="category_a != null">category_a=#{category_a},</if>
						<if test="subject != null">subject=#{subject},</if>
						<if test="content != null">content=#{content},</if>
					</set>
             where id=#{id}
	</update>
	
	<delete id="deleteNotice" parameterType="holouserDTO">
		delete from holouser where id=#{id}
	</delete>
	

</mapper>