<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="holonotice">

	<insert id="insertNotice" parameterType="HolonoticeDTO"> 
		insert into noticeboard(articlenum,category_a,id,subject,content,viewcount,regdate) values(noticeboard_seq.NEXTVAL, #{category_a}, #{id}, #{subject}, #{content}, 0, regdate) </insert>

	<update id="updateNotice" parameterType="holouserDTO">
		update holouser <set>
						<if test="category_a != null">category_a=#{category_a},</if>
						<if test="subject != null">subject=#{subject},</if>
						<if test="content != null">content=#{content},</if>
					</set>
             where id=#{id}
	</update>
	
	<delete id="deleteNotice" parameterType="holouserDTO">
		delete from holouser where id=#{id}
	</delete>
	

</mapper>